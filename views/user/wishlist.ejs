<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Wishlist</title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
  />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: "Arial", sans-serif;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    .sidebar {
      height: 100vh;
      width: 250px;
      position: fixed;
      background: #343a40;
      padding-top: 20px;
    }
    .sidebar a {
      padding: 15px;
      text-decoration: none;
      font-size: 18px;
      color: white;
      display: block;
    }
    .sidebar a:hover {
      background: #495057;
    }

    .content {
      margin-left: 260px;
      padding: 30px;
      min-height: 100vh;
      width: calc(100% - 260px);
    }

    .breadcrumb {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 10px 15px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    .breadcrumb-item a {
      color: #007bff;
      text-decoration: none;
    }
    .breadcrumb-item.active {
      color: #6c757d;
    }

    h2 {
      color: #2c3e50;
      font-weight: 600;
      margin-bottom: 30px;
      font-size: 1.8rem;
      text-align: center;
      text-transform: uppercase;
    }

    .wishlist-card {
      background: #ffffff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 20px;
      border: 1px solid #dee2e6;
      transition: transform 0.2s ease;
    }
    .wishlist-card:hover {
      transform: translateY(-5px);
    }
    .wishlist-card img {
      width: 100px;
      height: 100px;
      border-radius: 8px;
      object-fit: cover;
    }
    .wishlist-details {
      flex-grow: 1;
    }
    .wishlist-details h5 {
      color: #343a40;
      font-size: 1.25rem;
      font-weight: 600;
    }
    .wishlist-details p {
      margin: 5px 0;
      color: #6c757d;
    }
    .btn-primary {
      border-radius: 20px;
      padding: 8px 20px;
      background: #007bff;
      border: none;
    }
    .btn-danger {
      border-radius: 20px;
      padding: 8px 20px;
      background: #dc3545;
      border: none;
    }
    .empty-wishlist {
      text-align: center;
      padding: 40px;
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      margin-top: 20px;
    }
    .empty-wishlist p {
      color: #6c757d;
      font-size: 1.2rem;
      margin-bottom: 20px;
    }
    .empty-wishlist .btn {
      border-radius: 20px;
      padding: 10px 25px;
      background: #007bff;
      border: none;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 200px;
      }
      .content {
        margin-left: 200px;
        width: calc(100% - 200px);
      }
      .wishlist-card {
        flex-direction: column;
        text-align: center;
      }
    }
    @media (max-width: 576px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
      }
      .content {
        margin-left: 0;
        width: 100%;
        padding: 15px;
      }
    }
  </style>
</head>

<body>
  <div class="d-flex">
    <!-- Sidebar (Matching cart.ejs) -->
    <div class="sidebar">
      <h4 class="text-center text-white">User Dashboard</h4>
      <a href="/account">Account</a>
      <a href="/address-management">Address</a>
      <a href="/orders">Orders</a>
      <a href="/cart">Cart</a>
      <a href="/wallet">Wallet</a>
      <a href="/wishlist">Wishlist</a>
    </div>

    <!-- Main Content -->
    <div class="content">
      <!-- Breadcrumb Navigation (Matching cart.ejs) -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
        </ol>
      </nav>

      <h2>My Wishlist</h2>

      <% if (wishlist && wishlist.length > 0) { %>
      <div class="row">
        <div class="col-md-12">
          <% wishlist.forEach(item => { %> <% if (item.productId) { %>
          <div class="wishlist-card" data-id="<%= item.productId._id %>">
            <img
              src="/uploads/re-image/<%= item.productId.productImage[0] %>"
              alt="<%= item.productId.productName %>"
            />
            <div class="wishlist-details">
              <h5><%= item.productId.productName %></h5>
              <p>Price: â‚¹<%= item.productId.regularPrice.toFixed(2) %></p>
            </div>
            <div>
              <button
                class="btn btn-primary"
                onclick="addToCartFromWishlist('<%= item.productId._id %>')"
              >
                Add to Cart
              </button>
              <button
                class="btn btn-danger"
                onclick="removeFromWishlist('<%= item.productId._id %>')"
              >
                Remove
              </button>
            </div>
          </div>
          <% } else { %>
          <div class="wishlist-card">
            <p>Product not found (ID: <%= item.productId %>)</p>
            <button
              class="btn btn-danger"
              onclick="removeFromWishlist('<%= item.productId %>')"
            >
              Remove
            </button>
          </div>
          <% } %> <% }) %>
        </div>
      </div>
      <% } else { %>
      <div class="empty-wishlist">
        <p>Your wishlist is empty.</p>
        <a href="/shop" class="btn">Continue Shopping</a>
      </div>
      <% } %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function addToCartFromWishlist(productId) {
      $.ajax({
        url: "/addToCartFromWishlist", // Updated route
        method: "POST",
        contentType: "application/json",
        data: JSON.stringify({ productId }),
        success: function (data) {
          if (data.success) {
            $(`[data-id="${productId}"]`).fadeOut(500, function () {
              $(this).remove();
              if ($(".wishlist-card").length === 0) {
                window.location.reload();
              }
            });
            Swal.fire("Success", data.message, "success");
          } else {
            Swal.fire("Error", data.message, "error");
          }
        },
        error: function () {
          Swal.fire("Error", "Failed to add to cart", "error");
        },
      });
    }

    function removeFromWishlist(productId) {
      $.ajax({
        url: "/removeFromWishlist",
        method: "POST",
        contentType: "application/json",
        data: JSON.stringify({ productId }),
        success: function (data) {
          if (data.success) {
            $(`[data-id="${productId}"]`).fadeOut(500, function () {
              $(this).remove();
              if ($(".wishlist-card").length === 0) {
                window.location.reload();
              }
            });
            Swal.fire("Success", data.message, "success");
          } else {
            Swal.fire("Error", data.message, "error");
          }
        },
        error: function () {
          Swal.fire("Error", "Failed to remove from wishlist", "error");
        },
      });
    }
  </script>
</body>
